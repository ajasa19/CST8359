@model Lab4.Models.ViewModels.CommunityViewModel

@{
    ViewData["Title"] = "Student Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                LastName
            </th>
            <th>
                FirstName
            </th>
            <th>
                EnrollmentDate
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">Select</a> | <!--new option added-->
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="EditMemberships" asp-route-id="@item.Id">Edit Memberships</a> | <!--new option added-->
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.CommunityMemberships != null) //added if to get Select option working, Source code from Index.cshtml.cshtml
    {
    <h3>
        Member of the following communities
    </h3>
    <table class="table">
        <tr>
            @if (Model.CommunityMemberships.Count() > 0)
            {
                <th> Name </th>
            }
            else
            {
                <th> No membership record exist</th>
            }
        </tr>
        @foreach (var item in Model.CommunityMemberships.Select(i => i.Community))
        {
            <tr>
                <td>
                    @item.Title
                </td>
            </tr>
        }
    </table>
    }