@model Lab5.Models.AnswerImage

@{ ViewData["Title"] = "Answer Upload"; }

<h1>Upload</h1>

<h4>Upload a Picture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload" enctype="multipart/form-data">
            <div>
                What will the computers look like in 20 years?
                @Html.RadioButtonFor(model => model.Question, 0)
                <br>
                What will the earth look like in 20 years?
                @Html.RadioButtonFor(model => model.Question, 1)
            </div>
            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="answerImage" type="file">
                </div>
            </div>

            <div class="form-group">
                <button name="upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
